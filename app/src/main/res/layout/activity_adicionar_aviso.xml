<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.AdicionarAvisoActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescricaoAdicionarAviso"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="6"
        android:hint="Descreva aqui detalhadamente um aviso a todos os condÃ´minos"
        android:gravity="top"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPrioridadeAdicionarAviso"
        android:prompt="@string/prioridade_prompt"
        android:spinnerMode="dialog"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/button_style2"
            android:id="@+id/btnSalvarNovoAviso"
            android:text="SALVAR NOVO AVISO"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</LinearLayout>